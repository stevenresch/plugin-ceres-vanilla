{% macro getCurrency( currentOrderObject ) %}

    {% if currentOrderObject != null %}

        {{ currentOrderObject.order.amounts[0].currency }}

    {% endif %}

{% endmacro %}

{% macro getItemSumGross( currentOrderObject ) %}

    {% set itemSumGross = 0 %}

    {% if currentOrderObject != null %}

        {% for item in currentOrderObject.order.orderItems %}

            {% if currentOrderObject.order.orderItems[loop.index0].typeId == 1 %}

                {% set itemSumGross = itemSumGross + currentOrderObject.order.orderItems[loop.index0].amounts[0].priceGross %}

            {% endif %}

        {% endfor %}

    {% endif %}

    {{ itemSumGross }}

{% endmacro %}

